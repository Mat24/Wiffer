<h1>Listing routers</h1>

<table>
  <thead>
    <tr>
      <th>Red</th>
      <th>Bssid</th>
      <th>Essid</th>
      <th>Comment</th>
      <th>Public ip</th>
      <th>Port</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routers.each do |router| %>
      <tr>
        <td><%= router.red %></td>
        <td><%= router.bssid %></td>
        <td><%= router.essid %></td>
        <td><%= router.comment %></td>
        <td><%= router.public_ip %></td>
        <td><%= router.port %></td>
        <td><%= link_to 'Show', router %></td>
        <td><%= link_to 'Edit', edit_router_path(router) %></td>
        <td><%= link_to 'Destroy', router, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Router', new_router_path %>
